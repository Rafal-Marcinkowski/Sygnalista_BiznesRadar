<Window
    x:Class="PogromcaBiznesRadar.MVVM.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PogromcaBiznesRadar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="600"
    Height="190"
    Background="White"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border BorderBrush="Black" BorderThickness="1">

        <Grid Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1.25*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Canvas
                x:Name="StockChartCanvas"
                Grid.RowSpan="3"
                Grid.ColumnSpan="6"
                Margin="0,20,45,20"
                Background="White" />

            <TextBlock
                Grid.Column="4"
                Margin="25,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Text="{Binding HtmlProcessingManager.CompanyName}"
                TextWrapping="Wrap" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="4"
                Margin="25,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Text="{Binding HtmlProcessingManager.TurnoverMedian}" />

            <Border
                Grid.Row="2"
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="Black"
                BorderThickness="1">
                <TextBlock
                    Margin="25,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding HtmlProcessingManager.Capitalization}" />
            </Border>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.Quarters[3]}" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.Quarters[2]}" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.Quarters[1]}" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="DemiBold"
                Text="{Binding HtmlProcessingManager.Quarters[0]}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.SalesIncomes[3]}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.SalesIncomes[2]}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.SalesIncomes[1]}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="DemiBold"
                Text="{Binding HtmlProcessingManager.SalesIncomes[0]}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.NetIncomes[3]}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.NetIncomes[2]}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding HtmlProcessingManager.NetIncomes[1]}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="DemiBold"
                Text="{Binding HtmlProcessingManager.NetIncomes[0]}" />


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

            </Grid>
        </Grid>
    </Border>
</Window>
